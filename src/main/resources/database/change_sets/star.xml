<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-star" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="star"/>
            </not>
        </preConditions>

        <createTable tableName="star">
            <column name="star_id" type="varchar(37)"/>
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="star_name" type="text"/>
            <column name="x_coord" type="text"/>
            <column name="y_coord" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-column-owner_id-to-star" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="star" columnName="owner_id"/>
            </not>
        </preConditions>

        <addColumn tableName="star">
            <column name="owner_id" type="text"/>
        </addColumn>
    </changeSet>

    <changeSet id="add-primary-key-to_star" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="star" primaryKeyName="star-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="star" columnNames="star_id" constraintName="star-pk"/>
    </changeSet>
</databaseChangeLog>