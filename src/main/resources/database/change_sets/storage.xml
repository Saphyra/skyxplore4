<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-storage" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="storage"/>
            </not>
        </preConditions>

        <createTable tableName="storage">
            <column name="user_id" type="varchar(37)"/>
            <column name="storage_key" type="varchar(255)"/>
            <column name="value" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-primary-key-to_storage" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="storage" primaryKeyName="storage-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="storage" columnNames="storage_key, user_id" constraintName="storage-pk"/>
    </changeSet>
</databaseChangeLog>