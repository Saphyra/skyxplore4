<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-star_connection" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="star_connection"/>
            </not>
        </preConditions>

        <createTable tableName="star_connection">
            <column name="connection_id" type="varchar(37)"/>
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="star1" type="text"/>
            <column name="star2" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-primary-key-to_star-connection" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="star_connection" primaryKeyName="star_connection-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="star_connection" columnNames="connection_id" constraintName="star_connection-pk"/>
    </changeSet>
</databaseChangeLog>