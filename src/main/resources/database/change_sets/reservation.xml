<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-reservation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="reservation"/>
            </not>
        </preConditions>

        <createTable tableName="reservation">
            <column name="reservation_id" type="varchar(37)"/>
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="star_id" type="text"/>
            <column name="data_id" type="text"/>
            <column name="amount" type="number"/>
            <column name="storage_type" type="text"/>
            <column name="reservation_type" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-column-external_reference-to-reservation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="reservation" columnName="external_reference"/>
            </not>
        </preConditions>

        <addColumn tableName="reservation">
            <column name="external_reference" type="text"/>
        </addColumn>
    </changeSet>

    <changeSet id="add-primary-key-to_reservation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="reservation" primaryKeyName="reservation-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="reservation" columnNames="reservation_id" constraintName="reservation-pk"/>
    </changeSet>
</databaseChangeLog>