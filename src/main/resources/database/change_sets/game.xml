<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-game" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="game"/>
            </not>
        </preConditions>

        <createTable tableName="game">
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="game_name" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-column-round_to-game" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="game" columnName="round"/>
            </not>
        </preConditions>

        <addColumn tableName="game">
            <column name="round" type="number"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>