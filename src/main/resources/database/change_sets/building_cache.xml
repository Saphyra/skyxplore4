<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-building_cache" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="building_cache"/>
            </not>
        </preConditions>

        <createTable tableName="building_cache">
            <column name="building_cache_id" type="varchar(37)"/>
            <column name="game_id" type="varchar(37)"/>
            <column name="player_id" type="varchar(37)"/>
            <column name="building_id" type="varchar(37)"/>
            <column name="data_id" type="varchar(255)"/>
            <column name="amount" type="number"/>
        </createTable>

        <addPrimaryKey tableName="building_cache" columnNames="building_cache_id" constraintName="building_cache-pk"/>
    </changeSet>

    <changeSet id="create-index_game-id-to_building-cache" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="building_cache" indexName="building_game-id"/>
            </not>
        </preConditions>

        <createIndex tableName="building_cache" indexName="building_game-id">
            <column name="game_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>