<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-resource" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="resource"/>
            </not>
        </preConditions>

        <createTable tableName="resource">
            <column name="resource_id" type="varchar(37)"/>
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="storage_type" type="text"/>
            <column name="data_id" type="text"/>
            <column name="star_id" type="text"/>
            <column name="amount" type="number"/>
            <column name="round" type="number"/>
        </createTable>
    </changeSet>

    <changeSet id="add-primary-key-to_resource" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="resource" primaryKeyName="resource-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="resource" columnNames="resource_id" constraintName="resource-pk"/>
    </changeSet>
</databaseChangeLog>