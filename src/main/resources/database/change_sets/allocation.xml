<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-allocation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="allocation"/>
            </not>
        </preConditions>

        <createTable tableName="allocation">
            <column name="allocation_id" type="varchar(37)"/>
            <column name="game_id" type="text"/>
            <column name="user_id" type="text"/>
            <column name="star_id" type="text"/>
            <column name="data_id" type="text"/>
            <column name="storage_type" type="text"/>
            <column name="amount" type="number"/>
            <column name="allocation_type" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="add-column-external_reference-to-allocation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="allocation" columnName="external_reference"/>
            </not>
        </preConditions>

        <addColumn tableName="allocation">
            <column name="external_reference" type="text"/>
        </addColumn>
    </changeSet>

    <changeSet id="add-primary-key-to_allocation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists tableName="allocation" primaryKeyName="allocation-pk"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="allocation" columnNames="allocation_id" constraintName="allocation-pk"/>
    </changeSet>

    <changeSet id="add-column_player-id_to-allocation" author="Bernat Bonda">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="allocation" columnName="player_id"/>
            </not>
        </preConditions>
        <addColumn tableName="allocation">
            <column name="player_id" type="text"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>